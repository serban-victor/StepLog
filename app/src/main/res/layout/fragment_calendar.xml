<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context=".CalendarFragment">

    <TextView
        android:id="@+id/title_calendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Activity Calendar"
        android:textAlignment="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/title_calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/calendar_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp"
                android:background="@color/cardBackground">

                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/daily_data_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Data"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:padding="8dp"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/daily_data_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date: "
                        android:textSize="18sp"
                        android:textColor="@color/textColorSecondary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/text_home_steps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home Steps: "
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/text_home_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home Distance: "
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/text_home_calories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home Calories: "
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/text_timed_measurements_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Timed Measurements:"
                        android:textSize="18sp"
                        android:textColor="@color/textColorPrimary"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:id="@+id/container_timed_measurements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>