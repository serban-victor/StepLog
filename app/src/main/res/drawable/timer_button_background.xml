<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#4CAF50" /> <stroke android:width="2dp" android:color="#388E3C" />
            <shadow
                android:radius="12dp"
                android:color="#88000000" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#66BB6A" /> <stroke android:width="2dp" android:color="#43A047" />
            <shadow
                android:radius="12dp"
                android:color="#88000000" />
        </shape>
    </item>
</selector>
